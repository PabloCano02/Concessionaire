@model Concessionaire.Data.Entities.Reserve

@{
    ViewData["Title"] = "Details";
}

<flash dismissable="true" />

<h1>Detalles</h1>

<div>
    <partial name="_OrderDetails" />    
</div>

<div>
    <a asp-action="MyOrders" class="btn btn-outline-success">Regresar</a>
</div>

<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />
<hr />

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Vehículos</h3>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.ReserveDetails.FirstOrDefault().Vehicle.VehicleType.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ReserveDetails.FirstOrDefault().Vehicle.Brand.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ReserveDetails.FirstOrDefault().Vehicle.Line)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ReserveDetails.FirstOrDefault().Remarks)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ReserveDetails.FirstOrDefault().Vehicle.Price)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ReserveDetails.FirstOrDefault().DaysRent)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ReserveDetails.FirstOrDefault().Value)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ReserveDetails.FirstOrDefault().Vehicle.ImageFullPath)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.ReserveDetails)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Vehicle.VehicleType.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Vehicle.Brand.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Vehicle.Line)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Remarks)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Vehicle.Price)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DaysRent)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Value)
                                </td>
                                <td>
                                    <div class="zoom">
                                        <img src="@item.Vehicle.ImageFullPath" style="width:100px;" />
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#MyTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Spanish.json"
                },
                "aLengthMenu": [
                    [25, 50, 100, 200, -1],
                    [25, 50, 100, 200, "Todos"]
                ]
            });
        });
    </script>
}
