@model IEnumerable<Concessionaire.Data.Entities.Vehicle>

<table class="table table-striped table-responsive-md table-bordered smfont"  id="VehiclesTable">
    <colgroup>
        <col span="1" />
        <col span="1" />
        <col span="1" />
        <col span="1" />
        <col span="1" />
        <col span="1" />
        <col span="1" />
        <col span="1" />
        <col span="1" />
        <col span="1" />
    </colgroup>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Plaque)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VehicleType.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Brand.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Line)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                Disponible
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageFullPath)
            </th>
            <th>
                <a onclick="showInPopup('@Url.Action("Create", "Vehicles", new { }, Context.Request.Scheme)' , 'Nuevo Vehículo')" class="btn btn-sm btn-primary text-white"><i class="fa fa-plus-circle"></i> Vehículo</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                <a asp-action="Details" asp-controller="Vehicles" asp-route-Id="@item.Id">@Html.DisplayFor(modelItem => item.Plaque)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleType.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brand.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Line)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <div style="margin-left: 35px">
                    @Html.DisplayFor(modelItem => item.IsRent)
                </div>
            </td>
            <td>
                <div class="zoom">
                    <img src="@item.ImageFullPath" style="width:100px;" />
                </div>
            </td>
            <td>
                <a onclick="showInPopup('@Url.Action("Edit", "Vehicles", new { id = item.Id }, Context.Request.Scheme)' , 'Actualizar Vehículo')" class="btn btn-sm btn-success"><i class="fa fa-gear"></i> </a>
                <button data-id="@item.Id" class="btn btn-sm btn-danger deleteItem" data-bs-toggle="modal" data-bs-target="#deleteDialog"><i class="fa fa-trash"></i></button>
            </td>
        </tr>
        }
    </tbody>
</table>
