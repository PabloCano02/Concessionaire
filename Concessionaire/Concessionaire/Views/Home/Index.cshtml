@model Concessionaire.Models.HomeViewModel

@{
    ViewData["Title"] = "Index";
}

<flash dismissable="true" />

@if(Model.Quantity > 0)
{
    <a asp-action="ShowCart" class="btn btn-outline-primary">Ver Carro de Compras (@Model.Quantity)</a>
}

@foreach (var item in Model.Vehicles)
{
    <div class="row">
        @if (item.Vehicle1 != null)
        {
            <div class="col-md-3">
                <div class="card">
                    <div class="card_title"><strong>@item.Vehicle1.Brand.Name @item.Vehicle1.Line</strong></div>
                    <div class="card_body">
                        <img src="@item.Vehicle1.ImageFullPath" style="height:100px; max-width:230px;" />
                        <p class="mt-2" style="font-size:18px">
                            @item.Vehicle1.VehicleType.Name
                            <br>
                            modelo: @item.Vehicle1.Model
                            <h3>@Html.DisplayFor(modelItem => item.Vehicle1.Price)</h3>
                        </p>
                    </div>
                    <div class="card_foot">
                        <a asp-action="Details" asp-route-id="@item.Vehicle1.Id" class="btn btn-primary">Detalles</a>
                        <a asp-action="Add" asp-route-id="@item.Vehicle1.Id" class="btn btn-success">Agregar</a>
                    </div>
                </div>
            </div>
        }
        @if (item.Vehicle2 != null)
