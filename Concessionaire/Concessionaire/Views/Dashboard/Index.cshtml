@model IEnumerable<Concessionaire.Data.Entities.TemporalReserve>

@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid">
    <h3 class="text-muted">Dashboard</h3>
</div>


<div class="container-fluid">
    <div class="row">
        <div class="col-xl-3 col-md-6">
            <div class="card bg-primary text-white mb-3">
                <div class="card-body d-flex align-items-center justify-content-between"><h5>Nuevas Reservas <span class="badge bg-light text-dark">@ViewBag.NewOrdersCount</span></h5> <i class="fa-solid fa-3x fa-clock"></i> </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" href=@Url.Action("Index","Orders")>Ver Reservas</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-warning text-white mb-3">
                <div class="card-body d-flex align-items-center justify-content-between"><h5>Vehículos <span class="badge bg-light text-dark">@ViewBag.VehiclesCount</span> </h5> <i class="fa-solid fa-3x fa-car"></i></div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" href=@Url.Action("Index","Vehicles")>Ver Vehículos</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-success text-white mb-3">
                <div class="card-body d-flex align-items-center justify-content-between"><h5>Usuarios <span class="badge bg-light text-dark">@ViewBag.UsersCount</span> </h5>  <i class="fa-solid fa-3x fa-users"></i> </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" href=@Url.Action("Index","Users")>Ver Usuarios</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-danger text-white mb-3">
                <div class="card-body d-flex align-items-center justify-content-between"><h5>Reservas Confirmadas <span class="badge bg-light text-dark">@ViewBag.ConfirmedOrdersCount</span></h5> <i class="fa-solid fa-3x fa-key"></i> </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" href=@Url.Action("Index","Orders")>Ver Reservas</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-secondary text-white mb-3">
                <div class="card-body d-flex align-items-center justify-content-between"><h5>Reservas Canceladas <span class="badge bg-light text-dark">@ViewBag.CanceledOrdersCount</span></h5> <i class="fa-solid fa-3x fa-ban"></i> </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" href=@Url.Action("Index","Orders")>Ver Reservas</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="card">
        <h5 class="card-header">
            <i class="fa-solid fa-car text-danger"></i> Vehículos Agregados al Carro de Compras
        </h5>
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <table class="table table-hover table-responsive table-striped smfnt" id="TempTable" style="width:100%">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.User.Email)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Vehicle.VehicleType.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Vehicle.Brand.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Vehicle.Line)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Vehicle.Price)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DaysRent)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.User.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Vehicle.VehicleType.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Vehicle.Brand.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Vehicle.Line)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Vehicle.Price)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DaysRent)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script type="text/javascript">
        $(document).ready(function () {
            $('#TempTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Spanish.json"
                },
                "aLengthMenu": [
                    [25, 50, 100, 200, -1],
                    [25, 50, 100, 200, "Todos"]
                ]
            });
        });
    </script>
}