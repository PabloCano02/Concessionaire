@model Concessionaire.Models.RecoverPasswordViewModel

@{
    ViewData["Title"] = "Recover Password";
}

<flash dismissable="true" />

<div class="row">
    <div class="col-md-4  offset-md-4">
        <h2>Recuperación de Constraseña</h2>

        <div class="card bg-dark mb-3" style="width: 450px; height: 300px">
            <h5 class="card-header text-center text-white"><i class="fa-solid fa-envelope text-navy text-white"></i> Recuperación de contraseña</h5>
            <div class="card-body bg-white">
                <form method="post">
                    <div asp-validation-summary="ModelOnly"></div>

                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-warning"></span>
                    </div>

                    <div class="form-group mt-2">
                        <input type="submit" value="Recuperación de Contraseña" class="btn btn-outline-primary" />
                        <a asp-action="Login" class="btn btn-outline-success">Regresar</a>
                    </div>
                </form>
                <div class="text-success">
                    <p>
                        @ViewBag.Message
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
